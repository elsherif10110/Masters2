

    <script>
        function submitForm() {
            var inRussia = document.getElementById('inRussia').checked;

        if (inRussia) {
            var message = "Соглашайтесь с положениями и условиями";
            var confirmation = confirm(message);

            if (confirmation) {
                window.location.href = "/Home/List";
            }
        } else {
            alert("Пожалуйста, согласитесь с нашими условиями и положениями.");
        }
        }
    </script>

    <section class="form-section">
